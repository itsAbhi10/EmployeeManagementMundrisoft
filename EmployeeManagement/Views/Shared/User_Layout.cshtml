<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <title></title>
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fontawesome-free@6.4.2/css/fontawesome.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        * {
            
            font-family: 'Times New Roman', Times, serif;
        }
        

        .navbar {
            width: 80%;
            margin: auto;
            padding: 20px 0;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

            .navbar ul {
                display: flex;
                align-items: center;
                margin-left: auto;
            }

                .navbar ul li {
                    list-style: none;
                    margin-left: 20px; 
                    
                }

                    .navbar ul li:last-child {
                        margin-left: 20px; 
                    }

                    .navbar ul li a {
                        text-decoration: none;
                        color: Black;
                        font-size: 20px; 
                    }

                        

    </style>
</head>
<body>
   
        <div class="navbar">
            
            <ul>
                
                <li>@Html.ActionLink("Log Out", "Login", "Employee")</li>
            </ul>
        </div>

    
    
    <div>
        @RenderBody()
    </div>
    
</body>
</html>
