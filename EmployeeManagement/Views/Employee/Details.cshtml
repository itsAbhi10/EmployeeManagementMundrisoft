@model EmployeeModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/User_Layout.cshtml";

}
<style>
    body {
        background-color: #f8f9fa;
        padding-top: 20px;
    }
    l
    .form-container {
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        padding: 30px;
    }

        .form-container h4 {
            margin-bottom: 20px;
            color: #333;
        }

    .form-group label {
        font-weight: bold;
    }

    .btn-back {
        margin-top: 20px;
    }
</style>
<main id="main" class="main">
    <div class="row justify-content-center">
        <div class="col-md-11">
            <div class="form-container">

                <div class="card-header text-uppercase text-white" style="height: 80px; background-color:#012970; margin-bottom:30px;">
                    <a href="/Employee/Index" style="text-decoration: none; color: inherit;">
                        <span class="arrow-icon" style="margin-right: 10px; font-weight: bold; color: white; font-size: 35px;">&larr;</span>
                    </a>
                    <h4 style="display: inline-block; margin-top:20px; color:white;">Employee Details</h4>

                </div>


                <dl class="row">
                    <dt class="col-sm-2">
                        First Name
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.FirstName)
                    </dd>
                    <dt class="col-sm-2">
                        Middle Name
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.MiddleName)
                    </dd>
                    <dt class="col-sm-2">
                        Last Name
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.LastName)
                    </dd>
                    <dt class="col-sm-2">
                        Email
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Email)
                    </dd>


                    <dt class="col-sm-2">
                        Department
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Department)
                    </dd>
                    <dt class="col-sm-2">
                       Mobile No
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.MobileNo)
                    </dd>
                    <dt class="col-sm-2">
                        Gender
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Gender)
                    </dd>
                    
                </dl>

                <a class="btn btn-danger" asp-action="Index">Close</a>
            </div>



        </div>

    </div>


</main>
