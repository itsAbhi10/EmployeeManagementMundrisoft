@model IEnumerable<EmployeeManagement.Models.EmployeeModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/User_Layout.cshtml";
}
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<style>
    body {
        overflow-x: hidden;
       
    }

    .primary-color {
        color: #ECEFF1;
    }
  </style>
</head >
<main id="main" class="main" style="overflow-y: scroll;overflow-x: scroll; height: 500px;">
    <div class="pagetitle">
        @*         <h1>Index</h1>
        *@        <nav>

        </nav>
    </div>

    <section class="section">
        <div class="row">
            <div class="col-12">
                <div class="card" style="overflow:scroll;">
                    <div class="card-body">
                        <div class="row" style="background-color: #83c8f9;">
                            <div class="col-12">
                                <div class="d-flex justify-content-between align-items-center">
                                    <h1 class="m-0"><b>Employee List</b></h1>
                                    <a asp-action="Create" asp-controller="Employee" class="btn btn-outline-success">Add Employee<i class="bi bi-plus-circle" style="padding:5px;"></i></a>
                                </div>
                            </div>
                        </div>
                        <br />
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Employee ID</th>
                                    <th scope="col">First Name</th>
                                    <th scope="col">Middle Name</th>

                                    <th scope="col">Last Name</th>

                                    <th scope="col">Email</th>
                                    <th scope="col">Department</th>
                                    <th scope="col">Mobile No</th>
                                    <th scope="col">Gender</th>
                                    <th scope="col">Action</th>


                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.EID</td>
                                        <td>@item.FirstName</td>
                                        <td>@item.MiddleName</td>
                                        <td>@item.LastName</td>
                                        

                                        <td>@item.Email</td>
                                        <td>@item.Department</td>
                                        <td>@item.MobileNo</td>
                                        <td>@item.Gender</td>
                                        <td>
                                            <a href="/Employee/Edit/?EID=@item.EID" class="btn btn-primary btn-sm">Edit</a>
                                            <a href="/Employee/Delete/?EID=@item.EID" class="btn btn-danger btn-sm" >Delete</a>
                                            <a href="/Employee/Details/?EID=@item.EID" class="btn btn-info btn-sm">Details</a>
                                        </td>

                                    </tr>
                                }

                            </tbody>
                        </table>
                        
                    </div>
                </div>
            </div>
        </div>
    </section>

</main>
